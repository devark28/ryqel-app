<form method="POST">
    <div class="container body-content">
        <div class="container">
            <div class="row justify-content-center" style="padding-top:10px;">
                <label>
                    <h2><b>Sign Up</b></h2>
                </label>
            </div>
            <div>
                <div class="row justify-content-start" style="padding-top:10px;">
                    <label>
                        <h5><b>Username</b></h5>
                    </label>
                </div>
                <div class="row justify-content-center" style="padding-top:10px;">
                    <input class="form-control" required name="username" type="text" />
                </div>
            </div>
            <div>
                <div class="row justify-content-start" style="padding-top:10px;">
                    <label>
                        <h5><b>Email</b></h5>
                    </label>
                </div>
                <div class="row justify-content-center" style="padding-top:10px;">
                    <input class="form-control" required name="email" type="email" />
                </div>
            </div>
            <div>
                <div class="row justify-content-start" style="padding-top:10px;">
                    <label>
                        <h5><b>Password</b></h5>
                    </label>
                </div>
                <div class="row justify-content-center" style="padding-top:10px;">
                    <input class="form-control" required name="password" type="password" />
                </div>
            </div>
            <div>
                <div class="row justify-content-start" style="padding-top:10px;">
                    <label>
                        <h5><b>Confirm Password</b></h5>
                    </label>
                </div>
                <div class="row justify-content-center" style="padding-top:10px;">
                    <input class="form-control" required name="confirm_password" type="password" />
                </div>
            </div>
            <div class="row justify-content-center" style="padding:30px 0px  0px 0px;">
                <div class="col" style="text-align: start;padding:0px;">
                    <button class="btn btn-primary" style="width: 90%;" type="reset"
                        onclick="history.back()"><b>Cancel</b></button>
                </div>
                <div class="col" style="text-align: end;padding:0px;">
                    <button class="btn btn-primary sign_up" style="width: 90%;" type="submit"><b>Sign Up</b></button>
                </div>
            </div>
        </div>
    </div>
</form>